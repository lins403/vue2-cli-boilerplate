name: Build and Deploy
on: [push]
jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v2
        with:
          persist-credentials: false  #é€‚ç”¨äºéœ€è¦secrets.KEYçš„æƒ…å†µ

      - name: Cache node modules ğŸŒ
        uses: actions/cache@v2
        env:
          cache-name: cache-node-modules
        with:
          path: ~/.npm  #ä¸æ¨èç¼“å­˜ç›´æ¥ç”¨node_modulesï¼Œè½¬è€Œè®©npmè‡ªå·±é€‰æ‹©
          key: ${{ runner.os }}-build-${{ env.cache-name }}-${{ hashFiles('**/package-lock.json') }}
          restore-keys: |
            ${{ runner.os }}-build-${{ env.cache-name }}-
            ${{ runner.os }}-build-
            ${{ runner.os }}-

      - name: Install ğŸ‘€
        run:
          npm install --force

      - name: Test ğŸ––
        run:
          npm run test:unit

      - name: Build ğŸ”§
        run:
          npm run build

      - name: Deploy ğŸš€
        uses: JamesIves/github-pages-deploy-action@releases/v4
        with:
          GITHUB_TOKEN: ${{ secrets.ACCESS_TOKEN }}
          BRANCH: gh-pages
          FOLDER: dist
